<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medicinereminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="com.example.medicinereminder.AlarmService_Service"
            android:process=":remote" />

        <activity
            android:name="com.example.medicinereminder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.medicinereminder.HomePageActivity"
            android:label="@string/title_activity_home_page" >
        </activity>
        <activity
            android:name="com.example.medicinereminder.AlarmPage"
            android:label="@string/activity_alarm_service" />
        <activity
            android:name="com.example.medicinereminder.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.medicinereminder.BasicInfoActivity"
            android:label="@string/title_activity_basic_info" >
        </activity>
        <activity
            android:name="com.example.medicinereminder.SettingsRemindersActivity"
            android:label="@string/title_activity_settings_reminders" >
        </activity>
    </application>

</manifest>